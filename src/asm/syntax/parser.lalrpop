Identifier = { "identifier", "local identifier" };

// A list of comma-separated elements, optionally with a trailing comma.
CommaList<T>: Vec<T> = <mut list:(<T> ",")*> <last:T?> => match last {
	None => list,
	Some(elem) => {
		list.push(elem);
		list
	}
};
NonEmptyCommaList<T>: Vec<T> = <mut list:(<T> ",")*> <last:T> ","? => {
	list.push(last);
	list
};


